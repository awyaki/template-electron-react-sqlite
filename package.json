{
  "name": "template-electron-react-sqlite",
  "version": "1.0.0",
  "description": "template for using react, typescript and prisma with sqlite3 on electron",
  "main": "./out/main/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "npx electron-vite preview",
    "build": "npx electron-vite build",
    "pack": "npx electron-vite build && npx electron-builder build"
  },
  "author": "awyaki",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.1.1",
    "@types/node": "^20.12.7",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^15.2.0",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.2.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.1",
    "globals": "^15.1.0",
    "prettier": "3.2.5",
    "prisma": "^5.13.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.8.0",
    "vite": "^5.2.10"
  },
  "dependencies": {
    "@emotion/react": "^11.11.4",
    "@prisma/client": "^5.13.0",
    "electron-log": "^5.1.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sqlite3": "^5.1.7"
  },
  "build": {
    "appId": "com.template-electron-react-sqlite.app",
    "files": [
      "out/**/*",
      "prisma/**/*",
      "!prisma/dev.db",
      {
        "from": "node_modules/.prisma/client/",
        "to": "node_modules/.prisma/client/"
      }
    ],
    "extraResources": [
      "node_modules/@prisma/engines/schema-engine*",
      "node_modules/@prisma/engines/query*",
      "node_modules/@prisma/engines/libquery*",
      "node_modules/prisma/build/index.js",
      "node_modules/prisma/package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "asarUnpack": "prisma"
    },
    "directories": {
      "output": "build"
    }
  }
}
